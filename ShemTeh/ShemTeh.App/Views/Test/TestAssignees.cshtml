@using ShemTeh.Business.Models.Independent
@model TestAssignees

@using (Html.BeginForm("TestAssignees", "Test", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(model => model.TestId)
        <h1>Пользователи</h1>
    </div>
     @Html.ActionLink("Вернуться к тесту", "EditTest", "Test", 
    new { studentId = @User.Claims.First(c => c.Type == "Id").Value }, 
    new { type = "button", @class = "btn btn-outline-dark", @style = "margin-top:30px;" })
    <div>
        <table class="table">
            @for (int i = 0; i < Model.Assignees.Count; ++i)
            {
                <tr>
                    <th>@Html.HiddenFor(model => model.Assignees[i].UserId)</th>
                    <th>@Html.DisplayFor(model => model.Assignees[i].FirstName)</th>
                    <th>@Html.DisplayFor(model => model.Assignees[i].LastName)</th>
                    <th>@Html.CheckBoxFor(model => model.Assignees[i].IsAssigned, new { @style = "margin-right:20px;" })</th>
                </tr>
            }
        </table>
    </div>

    <input type="submit" value="Закончить" class="btn btn-outline-dark" style="margin-top:30px;" />
}